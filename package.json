{
  "name": "react-cool-form",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "homepage": "",
  "repository": "https://github.com/wellyshen/react-cool-form",
  "bugs": "https://github.com/wellyshen/react-cool-form/issues",
  "keywords": [],
  "author": "Welly Shen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "link-pkg": "npm link examples/node_modules/react && yarn link",
    "dev": "yarn clean:build && yarn copy:type && rollup -c rollup/config.js -w",
    "build": "yarn clean:build && yarn clean:size && yarn copy && rollup -c rollup/config.js --environment BUILD:production",
    "lint": "eslint --fix . --ext .js,.ts,.tsx",
    "type-check": "tsc",
    "type-check:watch": "yarn type-check --watch",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn clean:cov && yarn test --coverage",
    "clean": "run-p clean:*",
    "clean:build": "rimraf dist",
    "clean:size": "rimraf .size-snapshot.json",
    "clean:cov": "rimraf coverage",
    "copy": "run-p copy:*",
    "copy:cjs": "cpy rollup/cjsEntryFile.js dist --rename=index.js",
    "copy:type": "cpy src/types/react-cool-form.d.ts dist --rename=index.d.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "**/*": "prettier -w -u"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "exclude": [
            "@babel/plugin-transform-async-to-generator",
            "@babel/plugin-transform-regenerator"
          ]
        }
      ],
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": [
      "welly"
    ],
    "rules": {
      "camelcase": "off",
      "no-shadow": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-param-reassign": "off",
      "no-underscore-dangle": "off",
      "@typescript-eslint/no-shadow": "error"
    },
    "settings": {
      "polyfills": [
        "Promise"
      ]
    }
  },
  "eslintIgnore": [
    "dist",
    "rollup",
    "examples"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/*.(ts|tsx)",
      "!src/*.d.ts"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.12.1",
    "fast-deep-equal": "^3.1.3",
    "scheduler": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/react": "^16.9.53",
    "@types/scheduler": "^0.16.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.2.0",
    "eslint-config-welly": "^1.6.2",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
