{
  "name": "react-cool-form",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "homepage": "",
  "repository": "https://github.com/wellyshen/react-cool-form",
  "bugs": "https://github.com/wellyshen/react-cool-form/issues",
  "keywords": [],
  "author": "Welly Shen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "link-pkg": "npm link ./examples/node_modules/react && yarn link",
    "dev": "yarn clean:build && yarn copy:type && rollup -c rollup/config.js -w",
    "build": "yarn clean:build && yarn clean:size && yarn copy && rollup -c rollup/config.js --environment BUILD:production",
    "lint": "eslint --fix . --ext .js,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn clean:cov && yarn test --coverage",
    "clean": "run-p clean:*",
    "clean:build": "rimraf dist",
    "clean:size": "rimraf .size-snapshot.json",
    "clean:cov": "rimraf coverage",
    "copy": "run-p copy:*",
    "copy:cjs": "cpy rollup/cjsEntryFile.js dist --rename=index.js",
    "copy:type": "cpy src/types/react-cool-form.d.ts dist --rename=index.d.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "welly"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-param-reassign": "off",
      "no-underscore-dangle": "off"
    }
  },
  "eslintIgnore": [
    "dist",
    "rollup/cjsEntryFile.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/*.(ts|tsx)",
      "!src/*.d.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/react": "^16.9.49",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.2.0",
    "eslint-config-welly": "^1.4.8",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
